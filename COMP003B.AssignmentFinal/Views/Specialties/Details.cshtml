@model COMP003B.AssignmentFinal.Models.Specialty

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Specialty</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialtyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialtyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialtyType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialtyType)
        </dd>
    </dl>
</div>

<div class="col-md-4">
    <h4>Trainers</h4>
    <ul>
        @foreach (Trainer trainer in ViewBag.Trainers)
        {
                <li>@trainer.TrainerName</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.SpecialtyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
